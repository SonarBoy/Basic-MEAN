<% include ../partials/header.ejs %>
<body>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
    
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/Galaxy.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/carousel-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/Milk.jpg" alt="Third slide">
            </div>
            
            </div>
    
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
    
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
    
        </div>    

        <h1><%= title %></h1>

        <div class="container row">
            <div class="col-md-offset-3 col-md-6">
                <form action="" class="form" method="POST">
                    <div class="form-group"><label for="NameTextField">Object Name</label>
                        <input type="text" class="form-control" id="FirstNameTextField" placeholder="Enter Object Name"
                        name="Name">
                    </div>
                    
                    <div class="form-group"><label for="DesignationTextField">Designation</label>
                        <input type="text" class="form-control" id="DesignationTextField" placeholder="Enter Object Designation"
                        name="Designation">
                    </div>
                    <div class="form-group"><label for="TypeTextField">Type</label>
                        <input type="text" class="form-control" id="TypeTextField" placeholder="Enter Object Type"
                        name="Type">
                    </div>
                    <div class="form-group"><label for="DiameterTextField">Diameter</label>
                        <input type="text" class="form-control" id="DiameterTextField" placeholder="Enter Object Diameter"
                        name="Diameter">
                    </div>
                    
                    <div class="form-group"><label for="DistanceFromEarthTextField">Distance From Earth</label>
                        <input type="text" class="form-control" id="DistanceFromEarthTextField" placeholder="Enter Distance From Earth"
                        name="DistanceFromEarth">
                    </div>

                    <div class="form-group"><label for="MassTextField">Mass</label>
                        <input type="text" class="form-control" id="MassTextField" placeholder="Enter Object Mass"
                        name="Mass">
                    </div>

                    <div class="form-group"><label for="ConstellationTextField">Constellation</label>
                        <input type="text" class="form-control" id="ConstellationTextField" placeholder="Enter Object Constellation"
                        name="Constellation">
                    </div>

                    <div class="form-group"><label for="DiscoveredTextField">Discovered</label>
                        <input type="text" class="form-control" id="DiscoveredTextField" placeholder="Enter Discovered Date"
                        name="Discovered">
                    </div>
                    
                    <div class="form-group"><label for="StarsTextField">Stars</label>
                        <input type="text" class="form-control" id="StarsTextField" placeholder="Enter Stars"
                        name="Stars">
                    </div>
                    <button class="btn btn-primary" type="submit">Add to Galaxy.</button>
                </form>


            </div>
        </div>

<% include ../partials/footer.ejs %>