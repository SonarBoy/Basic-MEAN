<% include ../partials/header.ejs %>
<body>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">
        
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/Galaxy.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/carousel-2.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/Milk.jpg" alt="Third slide">
                  </div>
                  
                </div>
        
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
        
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
        
            </div>    

       <!--Repetable Template Row-->
       <% for (let count = 0; count < planetList.length; count++) { %>
            <div class="row mb-1 p-4">
                    <div class="col-md-12">
                      <div class="row  border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                          <strong class="d-inline-block mb-2 text-primary">Planet</strong>
                          <h3 class="mb-0"><%= planetList[count].Name %></h3>
                          <p class="card-text mb-auto"><%= planetList[count].Description %></p>
                          <!--<a href="#" class="stretched-link">Continue reading</a>-->
                        </div>
                        <div class="col-auto d-none d-lg-block">
                        <img width="200" height="250" src="/images/Planets/<%= planetList[count].Name %>.jpg" alt="..." class="img-thumbnail">    
                        </div>
                      </div>
                    </div>
            </div>
    <% } %> 

</div>
<% include ../partials/footer.ejs %>